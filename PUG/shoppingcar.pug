    body
        include header.pug
        .resize__wrapper.shoppingcart__responsive
            .link__web
                p Trang chủ 
                    i.fas.fa-caret-right
                    |Giỏ hàng
            .responsive__table
                table.table__cart
                    tr
                        - var ths = ['stt', 'sản phẩm', 'thông tin', 'đơn giá', 'số lượng', 'thành tiền', 'xóa']
                        -for(var i=0; i<7; i++) {
                            th= ths[i]
                        - }
                    - for(var i=1; i<=3; i++) {
                        +table(`${i}`, `../../images/cart-${i}.png`, 'máy khoan, cắt đa năng CNC', '2.350.00 Đ', '1', '2.350.00 Đ', 'fas fa-times')
                    - }
            table.table__total
                tr
                    td 
                        p tổng tiền
                    td
                        p 6.850.000 Đ
                tr  
                    td
                        p thuế(VAT)
                    td
                        p 6850.000 Đ
                tr
                    td
                        p thanh toán
                    td 
                        p 7.520.000 Đ
                tr
                    td.btn--none
                        button TIẾP TỤC MUA HÀNG
                    td.btn--none
                        button THANH TOÁN

        include footer.pug    
        